    <ImageView
    android:id="@+id/iv_babyboy"
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_babygirl"
        app:layout_constraintStart_toStartOf="@id/guideline_ver_56"
    app:srcCompat="@drawable/ic_child_friendly_black_24dp"
    android:tint="@color/babyBoy"
    />

    <ImageView
        android:id="@+id/iv_babygirl"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_babyboy"
        app:srcCompat="@drawable/ic_child_friendly_black_24dp"
        android:tint="@color/babyGirl"
        />

    <TextView
        android:id="@+id/tv_boys_count"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/oval"
        android:text="@string/children_add"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toRightOf="@id/iv_babyboy"
        app:layout_constraintBottom_toBottomOf="@id/iv_babyboy"
        />

    <TextView
        android:id="@+id/tv_girls_count"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/oval"
        android:text="@string/children_add"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toRightOf="@id/iv_babygirl"
        app:layout_constraintBottom_toBottomOf="@id/iv_babygirl"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_children_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_babyboy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</android.support.constraint.ConstraintLayout>
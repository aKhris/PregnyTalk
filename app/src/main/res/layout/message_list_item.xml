<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/message_horizontal_margin"
    android:layout_marginEnd="@dimen/message_horizontal_margin"
    android:layout_marginTop="@dimen/message_vertical_margin"
    android:layout_marginBottom="@dimen/message_vertical_margin"
    >
<android.support.v7.widget.CardView
    android:id="@+id/cv_message_root_card"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"

    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    >

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minWidth="@dimen/message_min_width"
        android:padding="@dimen/message_padding"
        >
        <TextView
            android:id="@+id/tv_message_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Julia:"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/secondaryDarkColor"
            />
        <FrameLayout
            android:id="@+id/fl_message_picture_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_message_user_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:id="@+id/iv_message_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/message_max_width"
                android:contentDescription="@string/content_description_message_picture"
                />
            <ProgressBar
                android:id="@+id/pb_message_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Hello every one!"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:maxWidth="@dimen/message_max_width"
            app:layout_constraintTop_toBottomOf="@id/fl_message_picture_block"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="start"
            />

        <TextView
            android:id="@+id/tv_message_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="15:06"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
</FrameLayout>